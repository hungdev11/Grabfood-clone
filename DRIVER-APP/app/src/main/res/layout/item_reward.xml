<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/text_reward_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thử thách hàng ngày"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/text_reward_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACTIVE"
                android:textSize="12sp"
                android:textColor="@color/status_online"
                android:textStyle="bold"
                android:background="@drawable/status_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/text_reward_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hoàn thành 5 đơn hàng trong ngày để nhận thưởng"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="12dp" />

        <!-- Reward Values -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiền thưởng"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/text_reward_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50.000₫"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/earnings_positive" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gems"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/text_reward_gems"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 💎"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Button -->
        <Button
            android:id="@+id/btn_claim_reward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhận thưởng"
            android:textColor="@color/white"
            android:backgroundTint="@color/grab_green"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</androidx.cardview.widget.CardView> 